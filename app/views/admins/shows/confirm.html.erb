<h3>Confirm the show to add to Watch Party</h3>

<table class="table table-hover table-striped table-condensed">
    <thead>
      <tr>
        <th>Title</th>
        <th>Network</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @shows.each do |s| %>
        <tr>
          <th><%= s.title %></th>
          <th><%= s.network %></th>
          <th><%= button_to('Confirm', "/admins/show/#{s.tvrage_id}", class: 'btn btn-xs btn-primary') %></th>
        </tr>
      <% end %>
    </tbody>
  </table>

  <span class="button-container">
    <p>Didn't Find The Show You Were Looking For?</p>
    <%= button_to('Search Again', "/admins/show/new", class: 'btn btn-md btn-default', method: :get) %>
  </span>
